extends ../main.layout.pug

block variables
  - var title = 'Блог';

block scripts
  script(src="blog.bundle.js")

block content
  +header('blog')
  section.blog
    aside.blog__navigation
      nav.articles
        ul.articles__list
          each item in [['Самое важное в SASS', true], ['Приёмы в вёрстке, без которых не обходится ни один сайт', false], ['Самый необходимый набор Gulp плагинов', false], ['Почему я выбрал Pug', false]]
