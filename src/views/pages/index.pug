extends ../auth.layout.pug

block content
  - var links = ['my-works.html', 'about.html', 'blog.html'];

  div#webgl-container
  section.welcome-section.js-preloader-wrapper
    header.welcome-header
      button.auth-button(type="button") Авторизоваться

    main.main
      .card
        .card-greeting.card-greeting--active
          +hero('authorization')
          .card-greeting__socials
            +socials('auth')
          nav.site-navigation
            ul.site-navigation__list
              each item, index in ['Мои работы', 'Обо мне', 'Блог']
                li.site-navigation__item
                  a.site-navigation__link(href=links[index])= item
        
        .card-auth
          h2.card-auth__heading Авторизуйтесь
          .card-auth__form
            form.auth-form#authorization-form(method="post", enctype="multipart/form-data", action="#")
              fieldset.auth-form__fieldset
                .auth-form__text--overlay
                  input.auth-form__text-input#auth-form__login(type="text", name="name", placeholder="Логин", required, minlength="8", maxlength="25")
                  label.auth-form__text-label(for="auth-form__login")
                    +icon('login', 'text-input__icon')
                .auth-form__text--overlay
                  input.auth-form__text-input#auth-form__password(type="password", name="password", placeholder="Пароль", required, minlength="8", maxlength="25")
                  label.auth-form__text-label(for="auth-form__password")
                    +icon('password', 'text-input__icon')
              fieldset.auth-form__fieldset
                input.auth-form__checkbox-input#auth-form__checkbox(type="checkbox")
                label.auth-form__checkbox-label(for="auth-form__checkbox") Я человек
                  +icon('check', 'checkbox-label__icon')
              fieldset.auth-form__fieldset
                legend.fieldset-legend Вы точно не робот?
                .auth-form__radio--overlay
                  input.auth-form__radio-input#auth-form__radio-true(type="radio" name="isNotRobot" value="true")
                  label.auth-form__radio-label(for="auth-form__radio-true") Да
                .auth-form__radio--overlay
                  input.auth-form__radio-input#auth-form__radio-false(type="radio" name="isNotRobot" value="false" checked)
                  label.auth-form__radio-label(for="auth-form__radio-false") Не уверен

          nav.auth-panel
            ul.auth-panel__list
              li.auth-panel__item
                button.auth-panel__button(type="button" id="toHomeButton") На главную
              li.auth-panel__item
                button.auth-panel__button(type="submit", form="authorization-form") Войти

    footer.footer-container
      .copyright
        p.copyright__text
          != '<span class="copyright__creator">&copy; Шелудешев Артём</span> <span class="copyright__barrier">|</span> <span class="copyright__info">создано с любовью в Loftschool | 2018</span>'

    .login-message.login-message--hidden
      span.login-message__title Неверный логин или пароль
      button.login-message__button Закрыть