extends ../main.layout.pug

block variables
  - var title = 'Обо мне';

block scripts
  script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyBw6BYEWm9ft20VkdRBtctm5pTSccf52Ro&callback=initMap')
  script(src='about.bundle.js')

block content
  +header('about')
  section.about
    .about__col.about__col--info
      .about__title.title-block
        +icon('about_header', 'title-icon title-icon--lighter')
        h2.title Обо мне
      article.about__desc
        .user-desc
          +image('content/about-photo.jpg', 'image of mine', 'user-desc__image')
          .user-desc__info
            .user-desc__title
              h3.subtitle Кто я
            .user-desc__text
              p.description-text 
                != 'Я веб разработчик из Санкт-Петербурга. Мне 17 лет. <br>Я занимаюсь разработкой современных сайтов и приложений. Мне нравится делать интересные и современные проекты.'
              p.description-text 
                != 'Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите,<br>как тут всё классно и красиво!'

    .about__col.about__col--skills
      .about__skills-title
        h3.subtitle 
          != 'Чем я могу быть <br>вам полезен'
      .about__skills-description
        p.description-text Больше всего меня привлекет Frontend разработка, но я также знаком и могу решать не сложные задачи на Backend. Но давайте по порядку.
      article.about__skills-container
        #skills-component

  section.contacts
    .contacts__container
      .user-data
        .user-data__title
          h2.subtitle Контакты
        .user-data__container
          ul.user-contacts-list
            li.user-contacts-list__item
              .contacts-cell
                +icon('skype', 'contacts-cell__icon')
                a.contacts-cell__title.contacts-cell__title--link(href="skype:aptemoxa2") aptemoxa2
            li.user-contacts-list__item
              .contacts-cell
                +icon('envelope2', 'contacts-cell__icon')
                a.contacts-cell__title.contacts-cell__title--link(href="mailto:sheludeshev.artyom@mail.ru") sheludeshev.artyom@mail.ru
            li.user-contacts-list__item
              .contacts-cell
                +icon('phone2', 'contacts-cell__icon')
                a.contacts-cell__title.contacts-cell__title--link(href="tel:+79048677250") +7 904 867 72 50
            li.user-contacts-list__item
              .contacts-cell
                +icon('map_marker', 'contacts-cell__icon')
                span.contacts-cell__title Санкт-Петербург, пр. Энгельса, д.129, к.4
    .google-map#map
  +footer('about')